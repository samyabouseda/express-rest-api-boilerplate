{
  "name": "express-rest-api-boilerplate",
  "version": "1.0.0",
  "description": "A straightforward boilerplate for building REST APIs with javascript ES6 and Express.",
  "main": "src/index.js",
  "scripts": {
    "start": "NODE_ENV=development nodemon --exec babel-node src/index.js",
    "test": "jest --watch --verbose",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "NODE_ENV=production babel -d ./build ./src -s",
    "build": "npm run clean && npm run build-babel && cp ./src/database/seeds/*.json ./build/database/seeds/",
    "serve": "NODE_ENV=production node ./build/index.js"
  },
  "author": "Samy Abouseda",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.0",
    "@babel/node": "^7.6.3",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/register": "^7.6.2",
    "babel-jest": "^24.9.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "prettier": "1.18.2",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.6.3",
    "@shelf/jest-mongodb": "^1.1.3",
    "chalk": "^2.4.2",
    "config": "^3.2.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-status-codes": "^1.4.0",
    "mongoose": "^5.7.7",
    "uuid": "^3.3.3"
  }
}
